{
  "name": "pycodejojo",
  "displayName": "PyCodeJOJO",
  "description": "",
  "icon": "images/kujojotaro.png",
  "version": "2025.5.12",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "publisher": "PyJOJO",
  "repository": {
    "type": "git",
    "url": "https://github.com/SakuraMYK/PyCodeJOJO.git"
  },
  "contributes": {
    "themes": [
      {
        "label": "Bumblebee",
        "uiTheme": "vs-dark",
        "path": "themes/BumbleBee.json"
      },
      {
        "label": "DarkKnight",
        "uiTheme": "vs-dark",
        "path": "themes/DarkKnight.json"
      },
      {
        "label": "OptimusPrime",
        "uiTheme": "vs-dark",
        "path": "themes/OptimusPrime.json"
      },
      {
        "label": "PurpleCrystal",
        "uiTheme": "vs-dark",
        "path": "themes/PurpleCrystal.json"
      },
      {
        "label": "PurplePhantom",
        "uiTheme": "vs-dark",
        "path": "themes/PurplePhantom.json"
      },
      {
        "label": "IronMan-Mark3",
        "uiTheme": "vs-dark",
        "path": "themes/IronMan-Mark3.json"
      },
      {
        "label": "FrozenCrystal",
        "uiTheme": "vs-dark",
        "path": "themes/FrozenCrystal.json"
      }
    ],
    "commands": [
      {
        "category": "PyCodeJOJO",
        "command": "pycodejojo.ChangeTheme",
        "title": "change Theme"
      }
    ],
    "configuration": {
      "title": "PyCodeJOJO",
      "properties": {
        "pycodejojo.ColorPicker.Enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable ColorPicker"
        },
        "pycodejojo.ColorPicker.MatchRGB": {
          "type": "boolean",
          "default": true,
          "description": "Match rgb(x, x, x) | rgba(x, x, x, x)"
        },
        "pycodejojo.ColorPicker.MatchTupleRGB": {
          "type": "boolean",
          "default": true,
          "description": "Match RGB Tuples (x, x, x) | (x, x, x, x)"
        },
        "pycodejojo.ColorPicker.MatchHex": {
          "type": "boolean",
          "default": true,
          "description": "Match Hex Color #FFFFFF | #FFFFFFFF | #FFF"
        },
        "pycodejojo.FontBackgroundColor.Enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Font Background Color"
        },
        "pycodejojo.Theme": {
          "type": "string",
          "default": "DarkKnight",
          "enum": [
            "Bumblebee",
            "DarkKnight",
            "OptimusPrime",
            "PurpleCrystal",
            "PurplePhantom",
            "IronMan-Mark3",
            "FrozenCrystal",
            "Default Dark+"
          ]
        }
      }
    }
  }
}
