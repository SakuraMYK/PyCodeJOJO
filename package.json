{
  "name": "pycodejojo",
  "displayName": "PyCodeJOJO",
  "description": "VSCode with superhero themes and python coding utilities",
  "icon": "images/kujojotaro_alpha.png",
  "version": "2025.11.6",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:html",
    "onLanguage:css",
    "onLanguage:scss",
    "onLanguage:less",
    "onLanguage:json",
    "onLanguage:jsonc",
    "onLanguage:cpp",
    "onLanguage:c",
    "onLanguage:csharp",
    "onLanguage:java",
    "onLanguage:go",
    "onLanguage:rust",
    "onLanguage:php",
    "onLanguage:ruby",
    "onLanguage:swift",
    "onLanguage:kotlin",
    "onLanguage:scala",
    "onLanguage:dart",
    "onLanguage:vue",
    "onLanguage:svelte",
    "onLanguage:xml",
    "onLanguage:yaml",
    "onLanguage:markdown",
    "onLanguage:txt",
    "onLanguage:plaintext"
  ],
  "main": "out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "auto-changelog": "^2.5.0",
    "compare-func": "^2.0.0",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "conventional-changelog-custom-config": "^0.3.1",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2"
  },
  "publisher": "PyJOJO",
  "repository": {
    "type": "git",
    "url": "https://github.com/SakuraMYK/PyCodeJOJO.git"
  },
  "contributes": {
    "themes": [
      {
        "label": "DarkKnight",
        "uiTheme": "vs-dark",
        "path": "themes/DarkKnight.json"
      },
      {
        "label": "Bumblebee",
        "uiTheme": "vs-dark",
        "path": "themes/BumbleBee.json"
      },
      {
        "label": "OptimusPrime",
        "uiTheme": "vs-dark",
        "path": "themes/OptimusPrime.json"
      },
      {
        "label": "PurpleCrystal",
        "uiTheme": "vs-dark",
        "path": "themes/PurpleCrystal.json"
      },
      {
        "label": "PurplePhantom",
        "uiTheme": "vs-dark",
        "path": "themes/PurplePhantom.json"
      },
      {
        "label": "IronMan-Mark3",
        "uiTheme": "vs-dark",
        "path": "themes/IronMan-Mark3.json"
      },
      {
        "label": "FrozenCrystal",
        "uiTheme": "vs-dark",
        "path": "themes/FrozenCrystal.json"
      },
      {
        "label": "EmeraldForest",
        "uiTheme": "vs-dark",
        "path": "./themes/EmeraldForest.json"
      },
      {
        "label": "Random",
        "uiTheme": "vs-dark",
        "path": "themes/Random.json"
      }
    ],
    "commands": [
      {
        "category": "PyCodeJOJO",
        "command": "Pycodejojo.SwitchTheme",
        "title": "Switch Theme"
      },
      {
        "category": "PyCodeJOJO",
        "command": "Pycodejojo.GeneratePythonInitFile",
        "title": "Generate Python __init__.py File"
      },
      {
        "category": "PyCodeJOJO",
        "command": "Pycodejojo.DeleteAllPythonInitFile",
        "title": "Delete All Python __init__.py File"
      },
      {
        "category": "PyCodeJOJO",
        "command": "Pycodejojo.RandomTheme",
        "title": "Random Theme"
      }
    ],
    "configuration": {
      "title": "PyCodeJOJO",
      "properties": {
        "Pycodejojo.HasActivated": {
          "type": "boolean",
          "default": false
        },
        "Pycodejojo.ColorPicker.Enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable ColorPicker"
        },
        "Pycodejojo.ColorPicker.MatchRGB": {
          "type": "boolean",
          "default": true,
          "description": "Match rgb(x, x, x) | rgba(x, x, x, x)"
        },
        "Pycodejojo.ColorPicker.MatchTupleRGB": {
          "type": "boolean",
          "default": true,
          "description": "Match RGB Tuples (x, x, x) | (x, x, x, x)"
        },
        "Pycodejojo.ColorPicker.MatchHex3": {
          "type": "boolean",
          "default": true,
          "description": "Match 3-digit Hex Color #FFF"
        },
        "Pycodejojo.ColorPicker.MatchHex6": {
          "type": "boolean",
          "default": true,
          "description": "Match 6-digit Hex Color #FFFFFF"
        },
        "Pycodejojo.ColorPicker.MatchHex8": {
          "type": "boolean",
          "default": true,
          "description": "Match 8-digit Hex Color #FFFFFFFF (with alpha)"
        },
        "Pycodejojo.FontBackgroundColor.Enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable Font Background Color"
        },
        "Pycodejojo.Theme": {
          "type": "string",
          "default": "DarkKnight",
          "enum": [
            "Bumblebee",
            "DarkKnight",
            "OptimusPrime",
            "PurpleCrystal",
            "PurplePhantom",
            "IronMan-Mark3",
            "FrozenCrystal",
            "EmeraldForest",
            "Random",
            "Default Dark+"
          ]
        }
      }
    }
  },
  "auto-changelog": {
    "output": "CHANGELOG.md",
    "template": "keepachangelog",
    "unreleased": true,
    "commitLimit": false,
    "breakingPattern": "BREAKING CHANGE:",
    "ignoreCommitPattern": "^(chore|style)",
    "sortCommits": "date-desc",
    "hideEmptyReleases": true,
    "hideCredit": true
  }
}
