{
  "name": "pycodejojo",
  "displayName": "PyCodeJOJO",
  "description": "",
  "icon": "images/kujojotaro.png",
  "version": "2025.5.12",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:python",
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:html",
    "onLanguage:json"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.100.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "eslint": "^9.23.0",
    "typescript": "^5.8.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "publisher": "PyJOJO",
  "repository": {
    "type": "git",
    "url": "https://github.com/SakuraMYK/PyCodeJOJO.git"
  },
  "contributes": {
    "themes": [
      {
        "label": "Dark",
        "uiTheme": "vs-dark",
        "path": "./themes/dark.json"
      }
    ],
    "configuration": {
      "title": "PyCodeJOJO",
      "properties": {
        "pycodejojo.ColorPicker": {
          "type": "boolean",
          "default": true,
          "description": "启用 取色器"
        },
        "pycodejojo.ColorPicker.MatchRGB": {
          "type": "boolean",
          "default": true,
          "description": "Match rgb(x, x, x) | rgba(x, x, x, x)"
        },
        "pycodejojo.ColorPicker.MatchTupleRGB": {
          "type": "boolean",
          "default": true,
          "description": "Match RGB Tuple (x, x, x) | (x, x, x, x)"
        },
        "pycodejojo.ColorPicker.MatchHex": {
          "type": "boolean",
          "default": true,
          "description": "Match #FFFFFF | #FFFFFFFF | #FFF"
        }
      }
    }
  }
}
